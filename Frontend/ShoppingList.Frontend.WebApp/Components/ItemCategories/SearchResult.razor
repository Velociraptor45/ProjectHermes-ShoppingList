@using ProjectHermes.ShoppingList.Frontend.Models.ItemCategories.Models

@inject NavigationManager _navigationManager;

<div class="search-result p-2" @onclick="OnItemClicked">
    <div>@Model.Name</div>
</div>

@code {
    [Parameter]
    public ItemCategorySearchResult Model { get; set; }

    private void OnItemClicked()
    {
        _navigationManager.NavigateTo($"item-categories/{Model.Id}");
    }
}