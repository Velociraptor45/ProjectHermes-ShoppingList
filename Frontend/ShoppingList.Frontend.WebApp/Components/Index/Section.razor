@using ProjectHermes.ShoppingList.Frontend.Models;
@using ProjectHermes.ShoppingList.Frontend.WebApp.Service;

<div>
    <div class="py-2 mb-1 pl-1 d-flex align-items-center cursor-pointer @GetBackgroundColor() @GetFontColor()" @onclick="OnSectionClicked">
        @if (Model.IsExpanded)
        {
            <Icon Type="down" Theme="outline" />
        }
        else
        {
            <Icon Type="right" Theme="outline" />
        }
        <div class="pl-1">@Model.Name</div>
    </div>
    @if (Model.IsExpanded)
    {
        <ul class="pl-3">
            @foreach (var item in Model.Items.Where(item => ShowItemsInBasket || !item.IsInBasket))
            {
                <ShoppingListItemComponent Item="@item"
                                           ItemBasketStatusChangedCallback="@ItemBasketStatusChangedCallback"
                                           ItemQuantityChangedCallback="@ItemQuantityChangedCallback"
                                           ItemRemovedCallback="@ItemRemovedCallback"
                                           IsInEditMode="@IsInEditMode"
                                           ItemPriceCalculationService="@ItemPriceCalculationService"></ShoppingListItemComponent>
            }
        </ul>
    }
</div>

@code {
    [Parameter] public ShoppingListSection Model { get; set; }
    [Parameter] public bool ShowItemsInBasket { get; set; }

    [Parameter] public EventCallback<ShoppingListItem> ItemBasketStatusChangedCallback { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> ItemQuantityChangedCallback { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> ItemRemovedCallback { get; set; }
    [Parameter] public EventCallback<ShoppingListItem> MakeItemPermanentCallback { get; set; }

    [Parameter] public bool IsInEditMode { get; set; }
    [Parameter] public IItemPriceCalculationService ItemPriceCalculationService { get; set; }

    private void OnSectionClicked()
    {
        if (Model.IsExpanded)
            Model.Close();
        else
            Model.Expand();
    }

    private string GetBackgroundColor()
    {
        if (Model.AllItemsInBasket)
            return "green-bg";
        if (Model.SomeItemsInBasket)
            return "warning-bg";

        return "red-bg";
    }

    private string GetFontColor()
    {
        if (Model.AllItemsInBasket || !Model.SomeItemsInBasket)
            return "white";

        return "warning-tx";
    }
}