@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@using Fluxor
@using ProjectHermes.ShoppingList.Frontend.Redux.Items.Actions.Search
@using ProjectHermes.ShoppingList.Frontend.Redux.Items.States

@inject IState<ItemState> State
@inject IDispatcher Dispatcher

<div class="d-flex search-bar mb-2">
    <Input TValue="string" @bind-value="@input" OnPressEnter="@OnLoadButtonClicked" Placeholder="Item name"></Input>
    <Button @onclick="@OnLoadButtonClicked" Class="ml-1 mr-3">Search</Button>
</div>

@code {
    private string input = "";

    private void OnLoadButtonClicked()
    {
        Dispatcher.Dispatch(new SearchItemsAction(input));
    }
}
