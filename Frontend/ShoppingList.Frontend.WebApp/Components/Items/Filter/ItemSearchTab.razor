@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@using Fluxor
@using global::ShoppingList.Frontend.Redux.Items.Actions.Search
@using global::ShoppingList.Frontend.Redux.Items.States

@inject IState<ItemState> State
@inject IDispatcher Dispatcher

<div>
    <Input TValue="string" @bind-value="@input" OnPressEnter="@OnLoadButtonClicked" Placeholder="Item name ..."></Input>
    <Button @onclick="@OnLoadButtonClicked" Class="mt-2">Load</Button>
</div>

@code {
    private string input = "";

    private void OnLoadButtonClicked()
    {
        Dispatcher.Dispatch(new SearchItemsAction(input));
    }
}
