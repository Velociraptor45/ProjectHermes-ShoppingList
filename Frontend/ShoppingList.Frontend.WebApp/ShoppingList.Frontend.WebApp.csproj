<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
    <RootNamespace>ProjectHermes.ShoppingList.Frontend.WebApp</RootNamespace>
    <Version>0.7.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AntDesign" Version="0.12.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.6" PrivateAssets="all" />
    <PackageReference Include="RestEase" Version="1.5.5" />
    <PackageReference Include="System.Net.Http.Json" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ShoppingList.Frontend.Infrastructure\ShoppingList.Frontend.Infrastructure.csproj" />
    <ProjectReference Include="..\ShoppingList.Frontend.Models\ShoppingList.Frontend.Models.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="..\ShoppingList.Frontend.WebApp\ShoppingList.Api.Client">
      <HintPath>ShoppingList.Api.Client.dll</HintPath>
    </Reference>
    <Reference Include="..\ShoppingList.Frontend.WebApp\ShoppingList.Api.Contracts">
      <HintPath>ShoppingList.Api.Contracts.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Components\Recipes\Editor\Ingredient.razor" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Components\Recipes\Editor\Ingredient.razor" />
  </ItemGroup>

</Project>
